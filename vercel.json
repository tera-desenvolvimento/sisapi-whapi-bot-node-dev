{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "name": "sisapi-whapi-bot-node-v2",
    "functions": {
      "api/index.js": {
        "runtime": "nodejs20.x"
      }
    },
    "rewrites": [
      { "source": "/(.*)", "destination": "/src/index.js" }
    ],
    "crons": [
    {
      "path": "/clearFluxes",
      "schedule": "45 8 * * *"
    }
  ]
}